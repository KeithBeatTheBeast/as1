<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_habits_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.keith.kgmills_habittracker.habitsViewActivity">

    <Button
        android:text="@string/addHabit"
        android:onClick="addNewHabitIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/addHabitButton" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/addHabitButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/activeHabitsListView"
        android:longClickable="true" />

    <Button
        android:text="@string/delHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteHabitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="deleteHabitIntent" />
</RelativeLayout>
